{
	"name": "hermajan/lib",
	"description": "Library with functions for web applications.",
	"type": "library",
	"license": "MIT",
	
	"homepage": "https://hermajan.net/lib",
	"support": {
		"issues": "https://github.com/hermajan/lib/issues"
	},
	
	"autoload": {
		"classmap": ["src"]
	},
	
	"config": {
		"vendor-dir": "vendor",
		"sort-packages": true,
		"optimize-autoloader": true
	},
	
	"require": {
		"php": ">=7.1",
		"ext-dom": "*",
		"ext-json": "*",
		"ext-curl": "*"
	},
	"require-dev": {
		"nette/tester": "^2.3",
		"phpstan/phpstan": "^0.12.64"
	}
}
